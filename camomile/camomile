#!/bin/bash
# #############################################################################
#
# Start the Camomile server
#
# Use like:
#
# camomile [port]
#
# E.g.
#
# camomile
# camomile 8181
#
# #############################################################################

OS=""
case "`uname`" in
Darwin*) OS="OSX";;
Linux*) OS="LINUX";;
esac

cd bin
if [ "$OS" == "OSX" ]
then
  awk -v PORT=$1 -f json.awk -f camomile.awk
elif [ "$OS" == "LINUX" ]
then
  LC_ALL=C gawk -v PORT=$1 -f json.awk -f camomile.awk
else
  LC_ALL=C gawk -v PORT=$1 -f json.awk -f camomile.awk
fi
