<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Camomile Web Application</display-name>

    <welcome-file-list>
        <welcome-file>info.jsp</welcome-file>
    </welcome-file-list> 

    <servlet>
        <servlet-name>CamomileSqlApp</servlet-name>
        <servlet-class>org.apache.wink.server.internal.servlet.RestServlet</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>app.camomile.sql.CamomileApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CamomileSqlApp</servlet-name>
        <url-pattern>/sql/*</url-pattern>
    </servlet-mapping>

</web-app>

